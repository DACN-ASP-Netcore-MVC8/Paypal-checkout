@model ContactModel
<style>
    /* General container styling */
.container {
    margin-top: 20px;
}

/* Company Info Styling */
.company-info {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.company-info h2 {
    font-size: 2rem;
    margin-bottom: 15px;
}

.company-info .contact-image {
    border-radius: 50%;
    margin-bottom: 15px;
}

.company-info p {
    font-size: 1rem;
    line-height: 1.5;
}

/* Map iframe styling */
.map-iframe {
    width: 100%;
    height: 400px;
    border: 0;
    border-radius: 8px;
}

/* Contact Details Styling */
.contact-details {
    background-color: #ffffff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.contact-details p {
    font-size: 1rem;
    margin-bottom: 10px;
}


}

</style>


<div class="container">
    <div class="row">
        <!-- Left Section: Logo and Description -->
        <div class="col-md-4">
            <div class="company-info">
                <h2>THE GIOI DI DONG</h2>
                <img src="~/media/logo/@Model.LogoImg" alt="Contact Logo" class="contact-image" />
                <p>@Html.Raw(Model.Description)</p>
            </div>
        </div>

        <!-- Center Section: Map -->
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.Map))
            {
                <!-- Ensure Map contains a full Google Maps embed iframe -->
                <iframe src="@Model.Map" class="map-iframe"></iframe>
            }
        </div>

        <!-- Right Section: Contact Details -->
        <div class="col-md-4">
            <div class="contact-details">
                <p><strong>Name:</strong> @Model.Name</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @Model.Phone</p>
            </div>
        </div>
    </div>
</div>

